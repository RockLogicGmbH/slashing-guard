{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "**/dist",
    "**/node_modules",
    "**/coverage",
    "**/tests",
    "**/.tests",
    "**/.jest-cache",
    "**/jest.config.js",
    "**/jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.int.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.int.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.int.js",
    "**/*.spec.jsx",
    "**/*.test.jsx",
    "**/*.int.jsx"
  ]
}
